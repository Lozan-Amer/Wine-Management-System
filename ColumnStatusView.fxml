<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.winejavasql.ColumnStatusController"
      alignment="CENTER" spacing="20">

    <!-- כפתור לבחירת עמודה -->
    <Button fx:id="selectColumnButton" text="Select Column" onAction="#showColumnDropdown" styleClass="select-button"/>

    <!-- ComboBox לבחירת העמודה -->
    <ComboBox fx:id="columnDropdown" promptText="Choose a column" onAction="#calculateMinMax" visible="false"/>

    <!-- תוויות להצגת התוצאה -->
    <Label fx:id="maxValueLabel" text=""/>
    <Label fx:id="minValueLabel" text=""/>

    <!-- כפתור חזרה -->
    <Button fx:id="backButton" text="Back" onAction="#goBackToMain" styleClass="back-button"/>

</VBox>
