<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.winejavasql.FilterByDateController"
      spacing="15" alignment="CENTER">

    <HBox spacing="10" alignment="CENTER">
        <DatePicker fx:id="startDatePicker" promptText="Start Date"/>
        <DatePicker fx:id="endDatePicker" promptText="End Date"/>
        <Button fx:id="filterButton" text="Filter"/>
    </HBox>

    <TableView fx:id="tableView" prefWidth="800" prefHeight="400">
        <columns>
            <TableColumn fx:id="fixedAcidityColumn" text="Fixed Acidity"/>
            <TableColumn fx:id="volatileAcidityColumn" text="Volatile Acidity"/>
            <TableColumn fx:id="citricAcidColumn" text="Citric Acid"/>
            <TableColumn fx:id="residualSugarColumn" text="Residual Sugar"/>
            <TableColumn fx:id="chloridesColumn" text="Chlorides"/>
            <TableColumn fx:id="freeSulfurDioxideColumn" text="Free Sulfur Dioxide"/>
            <TableColumn fx:id="totalSulfurDioxideColumn" text="Total Sulfur Dioxide"/>
            <TableColumn fx:id="densityColumn" text="Density"/>
            <TableColumn fx:id="pHColumn" text="pH"/>
            <TableColumn fx:id="sulphatesColumn" text="Sulphates"/>
            <TableColumn fx:id="alcoholColumn" text="Alcohol"/>
            <TableColumn fx:id="qualityColumn" text="Quality"/>
            <TableColumn fx:id="colorColumn" text="Color"/>
            <TableColumn fx:id="entryDateColumn" text="Entry Date"/>
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="backButton" text="Back"/>
    </HBox>

</VBox>
